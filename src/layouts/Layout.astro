---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title = "James - UX/UI Designer & Product Manager", 
  description = "Portfolio of James, a UX/UI Designer and Product Manager specializing in creating beautiful, user-centered digital experiences."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
    
    <script>
      import { gsap } from 'gsap';
      import Lenis from '@studio-freight/lenis';
      
      const lenis = new Lenis({
        duration: 0,
        easing: (t) => t,
        direction: 'vertical',
        gestureDirection: 'vertical',
        smooth: true,
        smoothTouch: false,
        touchMultiplier: 2,
        infinite: false,
      });
      
      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }
      
      requestAnimationFrame(raf);
      
      // Simple fade in for main content
      window.addEventListener('DOMContentLoaded', () => {
        gsap.fromTo(
          'main',
          { opacity: 0 },
          { opacity: 1, duration: 0.3 }
        );
      });
    </script>
  </body>
</html>