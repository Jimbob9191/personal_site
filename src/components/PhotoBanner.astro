---
const projects = [
  {
    url: "https://images.pexels.com/photos/3987066/pexels-photo-3987066.jpeg",
    title: "Finance App Redesign",
    slug: "finance-app",
    isPortrait: false
  },
  {
    url: "https://images.pexels.com/photos/1516680/pexels-photo-1516680.jpeg",
    title: "E-commerce Website",
    slug: "ecommerce-website",
    isPortrait: true
  },
  {
    url: "https://images.pexels.com/photos/3683074/pexels-photo-3683074.jpeg",
    title: "Health & Wellness Platform",
    slug: "health-platform",
    isPortrait: false
  },
  {
    url: "https://images.pexels.com/photos/2007401/pexels-photo-2007401.jpeg",
    title: "Travel Booking App",
    slug: "travel-app",
    isPortrait: true
  },
  {
    url: "https://images.pexels.com/photos/1763075/pexels-photo-1763075.jpeg",
    title: "Music Streaming Dashboard",
    slug: "music-dashboard",
    isPortrait: false
  }
];
---

<section class="photo-banner">
  <div class="banner-content">
    <div class="scroll-track">
      {[...projects, ...projects].map((project) => (
        <a href={`/work/${project.slug}`} class={`photo-item ${project.isPortrait ? 'portrait' : 'landscape'}`}>
          <img src={project.url} alt={project.title} />
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .photo-banner {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 0 0 var(--space-6) 0;
    margin-top: calc(var(--space-6) * -1);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeIn 0.8s ease forwards;
    animation-delay: 1s;
  }

  .banner-content {
    width: 100%;
    overflow: hidden;
  }

  .scroll-track {
    display: flex;
    gap: var(--space-4);
    animation: scroll 30s linear infinite;
    animation-delay: 1s;
    width: max-content;
  }

  .photo-item {
    border-radius: 8px;
    overflow: hidden;
    display: block;
  }

  .photo-item.landscape {
    width: 360px;
    height: 240px;
  }

  .photo-item.portrait {
    width: 240px;
    height: 360px;
  }

  .photo-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .photo-item.landscape {
      width: 300px;
      height: 200px;
    }

    .photo-item.portrait {
      width: 200px;
      height: 300px;
    }
  }
</style>