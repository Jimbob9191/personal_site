---
interface Props {
  title: string;
  category: string;
  image: string;
  slug: string;
  index: number;
}

const { title, category, image, slug, index } = Astro.props;
---

<a href={`/work/${slug}`} class="project-card" data-index={index}>
  <div class="project-image-container">
    <img src={image} alt={title} class="project-image" />
    <div class="project-overlay">
      <span class="button-secondary">View Project</span>
    </div>
  </div>
  <div class="project-info">
    <h3 class="project-title">{title}</h3>
    <span class="project-category">{category}</span>
  </div>
</a>

<style>
  .project-card {
    position: relative;
    display: block;
    height: 100%;
    transition: transform 0.3s var(--transition-bounce);
  }
  
  .project-card:hover {
    transform: translateY(-8px);
  }
  
  .project-image-container {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: var(--space-4);
    aspect-ratio: 16 / 9;
  }
  
  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  
  .project-card:hover .project-image {
    transform: scale(1.05);
  }
  
  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .project-card:hover .project-overlay {
    opacity: 1;
  }
  
  .project-info {
    padding: var(--space-2) 0;
  }
  
  .project-title {
    font-size: 1.25rem;
    margin-bottom: var(--space-2);
    font-weight: 500;
    letter-spacing: -0.02em;
    line-height: 1.3;
  }
  
  .project-category {
    display: block;
    font-size: 0.875rem;
    color: var(--color-secondary);
    letter-spacing: -0.01em;
    line-height: 1.7;
  }
</style>