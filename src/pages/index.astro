---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import PhotoBanner from '../components/PhotoBanner.astro';
import AboutSection from '../components/AboutSection.astro';
import Skills from '../components/Skills.astro';
import ContactCTA from '../components/ContactCTA.astro';

const projects = [
  {
    title: "Fannel Fashion",
    category: "E-commerce",
    image: "https://images.pexels.com/photos/5632402/pexels-photo-5632402.jpeg",
    slug: "fannel-fashion"
  },
  {
    title: "Charf Keyboards",
    category: "Product Design",
    image: "https://images.pexels.com/photos/3683074/pexels-photo-3683074.jpeg",
    slug: "charf-keyboards"
  },
  {
    title: "News Morning",
    category: "Mobile UI",
    image: "https://images.pexels.com/photos/4386339/pexels-photo-4386339.jpeg",
    slug: "news-morning"
  }
];
---

<Layout title="James - UX/UI Designer & Product Manager">
  <Hero />
  <PhotoBanner />
  
  <section class="featured-work section">
    <div class="container">
      <h2 class="section-title">Featured Projects</h2>
      
      <div class="projects-grid">
        {projects.map((project, index) => (
          <a href={`/work/${project.slug}`} class="project-card" data-index={index}>
            <div class="project-image">
              <img src={project.image} alt={project.title} />
            </div>
            <div class="project-info">
              <h3>{project.title}</h3>
              <span class="project-category">{project.category}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <AboutSection />
  <Skills />
  <ContactCTA />
</Layout>

<style>
  .featured-work {
    padding-top: 0;
  }

  .section-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    margin-bottom: var(--space-8);
    opacity: 0;
    transform: translateY(20px);
    animation: revealTitle 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 2.2s;
    will-change: transform, opacity;
  }

  .projects-grid {
    display: grid;
    gap: var(--space-6);
    opacity: 0;
    transform: translateY(20px);
    animation: revealGrid 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 2.4s;
    will-change: transform, opacity;
  }

  .project-card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: var(--color-muted);
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform;
  }

  .project-card:hover {
    transform: translateY(-8px);
  }

  .project-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-info {
    padding: var(--space-4) var(--space-5);
  }

  .project-info h3 {
    font-size: 1.5rem;
    margin-bottom: var(--space-2);
  }

  .project-category {
    color: var(--color-secondary);
    font-size: 0.875rem;
  }

  @keyframes revealTitle {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes revealGrid {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .project-card:first-child {
      grid-column: 1 / -1;
    }
  }
</style>